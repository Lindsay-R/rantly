<%= form_tag searches_path, :method => 'get', id: 'search-form' do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "Search all rants" %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% @rants.each do |rant| %>
  <div><p class="font-10pt">
    <span class="user-link"><%= link_to "#{rant.user.username}", user_rants_path(rant.user_id) %></span> &nbsp;|&nbsp;
    <span class="rant-link"><%= link_to "#{rant.title.upcase} - #{rant.verbage}", user_rant_path(rant.user_id, rant.id), class: "rant-link" %></span>
  </p></div>
<% end %>

<% @users.each do |user| %>
  <div>
    <% user.rants.each do |rant| %>
      <div><p class="font-10pt">
        <span class="user-link"><%= link_to "#{user.username}", user_rants_path(rant.user_id) %></span> &nbsp;|&nbsp;
        <span class="rant-link"><%= link_to "#{rant.title.upcase} - #{rant.verbage}", user_rant_path(rant.user_id, rant.id), class: "rant-link" %></span>
      </p></div>
    <% end %>
  </div>
<% end %>