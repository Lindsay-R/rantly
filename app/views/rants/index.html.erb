<div class="dash-flex-container">

  <div class="dash-flex1">
    <%= render 'rants/create_rant_form' %>
  </div>






  <div class="dash-flex2">

    <div class="rant-show-flex-container">

    <div><h1 class="rant-label"><%= @user.first_name %> <%= @user.last_name %></h1></div>
    </div>
    <div class="fav-follow-flex-container"><span class="fav-follow-link"><%= link_to "Favorite", favorites_path%></span><span class="fav-follow-link"><%= link_to "Follow", follows_path%></span></div>

    <div class="clearfix"></div>
    <hr>
    <h3><%= @user.rant_rate.capitalize %> Ranter</h3>
    Bio: <%= @user.bio %>


    <% @rants.each do |rant| %>

      <div>
        <p class="rant-link"><%= link_to "#{rant.title.upcase} - #{rant.verbage}", user_rant_path(rant.user_id, rant.id) %></p>
      </div>

    <% end %>


  </div>


</div>