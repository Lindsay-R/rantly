<div class="dash-flex-container">

  <div class="dash-flex1">
    <%= render 'rants/create_rant_form' %>
  </div>

  <div class="dash-flex2">

    <div class="rant-show-flex-container">
      <div><h1 class="rant-label"><%= @rant.title.upcase %></h1></div>
      <div class="rant-show-username">author:
        <span class="user-link"><%= link_to "#{@rant.user.username.capitalize}", user_rants_path(@rant.user_id) %></span>
      </div>
      <div class="rant-show-username">
      Favorites: <%= @rant.favorites.where(:rant_id => @rant.id).count%>
      </div>
    </div>

    <div class="fav-follow-flex-container">
      <!--calls users_helper with follow_button method-->
      <% if current_user.can_follow?(@user) %>
        <%= follow_button @user %>
      <% end %>


      <% if current_user.id != @user.id  %>

        <!--calls favorites_helper with favorite_button method-->
        <%= favorite_button @rant %>

        <% else %>
      <% end %>

    </div>

    <div class="clearfix"></div>

    <hr>

    <p><%= @rant.verbage %></p>

  </div>


</div>