<div class="dash-flex2">
  <h2 class="text-center " ><%= @user.first_name %> <%= @user.last_name %> <%= link_to "Edit Profile", edit_profile_path%></h2>

  <hr>
  <h3><%= @user.rant_rate.capitalize %> Ranter</h3>
  Bio: <%= @user.bio %>


  <% @rants.each do |rant| %>

    <div><p class="rant-link"><%= link_to "#{rant.title.upcase} - #{rant.verbage}", user_rant_path(rant.user_id, rant.id) %></p></div>

  <% end %>


</div>